{
  "compilerOptions": {
    "allowJs": true,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": [
      "dom",
      "es2017"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "esnext",
    "baseUrl": ".",
    "paths": {
      "@/components": [
        "src/components"
      ],
      "@/data/*": [
        "data/*"
      ],
      "@/layouts/*": [
        "src/layouts/*"
      ],
      "@/lib/*": [
        "src/lib/*"
      ],
      "@/styles/*": [
        "src/styles/*"
      ],
      "@/types/*": [
        "src/types/*"
      ],
      "@/types": [
        "src/types/index"
      ]
    },
    "incremental": true
  },
  "exclude": [
    "node_modules",
    ".next",
    ".vercel",
    "public",
    "assets",
    "data",
    "out"
  ],
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ]
}
